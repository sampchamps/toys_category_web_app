<!-- Shows list of Toys and Categories -->
<ul id = "types">
   <% Type.all.each do |c| %>
   <li><%= link_to c.name, :action => "show_types", :id => c.id %></li>
   <% end %>
</ul>

<% if @toys.blank? %>
<p>There are not any Toys currently in the system.</p>
<% else %>
<p>These are the current Toys in our system</p>

<ul id = "toys">
   <% @toys.each do |c| %>
   <li>
   <%= link_to c.title, {:action => 'show', :id => c.id} -%>
   <b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
   <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
</li>
   <% end %>
</ul>



<% end %>
<p><%= link_to "Add new Toy", {:action => 'new' }%></p>